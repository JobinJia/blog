// var
@import '_variables/_base';
@import '_variables/_colors';
// mixin
@import '_mixins/*';
// global
@import '_global';
@import '_layout/*';
// component
@import '_components/*';
@import '_components/*/*';
// widget
@import '_widget/back-to-top';

if (hexo-config('local_search.enable') || hexo-config('algolia_search.enable')) {
  @import '_widget/search';
}

if (hexo-config('comment.enable')) {
  @import '_widget/comment';
}

// extend page
if (hexo-config('girls.enable')) {
  @import '_extend/girls';
}