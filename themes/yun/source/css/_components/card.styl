.hty- {
  &card {
    position: relative;
    display: flex;
    margin: 1rem;
    the-transition();
    flex-direction: column;
    box-sizing: border-box;

    &__actions {
      display: flex;
      flex-direction: row;
      align-items: center;
      box-sizing: border-box;
      min-height: 3rem;
      border-top: 1px solid white;
    }
  }
}